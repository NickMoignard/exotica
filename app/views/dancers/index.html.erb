<p id="notice"><%= notice %></p>

<h1>Dancers</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Fake name</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dancers.each do |dancer| %>
      <tr>
        <td><%= dancer.full_name %></td>
        <td><%= dancer.fake_name %></td>
        <td><%= dancer.account %></td>
        <td><%= link_to 'Show', dancer %></td>
        <td><%= link_to 'Edit', edit_dancer_path(dancer) %></td>
        <td><%= link_to 'Destroy', dancer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

